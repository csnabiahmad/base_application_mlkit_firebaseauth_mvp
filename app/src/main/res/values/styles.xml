<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:fontFamily">@font/gotham_light</item>
		<item name="drawerArrowStyle">@style/DrawerIconStyle</item>
		<item name="android:screenOrientation">portrait</item>
		<item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
	</style>


	<style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
		<item name="android:activityOpenEnterAnimation">@anim/slide_from_right</item>
		<item name="android:activityOpenExitAnimation">@anim/slide_to_right</item>
		<item name="android:activityCloseEnterAnimation">@anim/slide_from_left</item>
		<item name="android:activityCloseExitAnimation">@anim/slide_to_left</item>
	</style>




	<style name="AppTheme.Custom">
		<item name="android:windowAnimationStyle">@null</item>
		<item name="android:windowDisablePreview">true</item>
	</style>
	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
		<item name="colorControlNormal">@color/light</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="color">@android:color/white</item>
	</style>

	<style name="Theme_Dialog" parent="android:Theme.DeviceDefault.Dialog.NoActionBar">
		<item name="android:windowMinWidthMajor">100%</item>
		<item name="android:windowMinWidthMinor">100%</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="FullScreenDialog" parent="android:Theme.DeviceDefault.Dialog.NoActionBar">
		<item name="android:backgroundDimEnabled">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:padding">0dp</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowCloseOnTouchOutside">false</item>
	</style>


</resources>